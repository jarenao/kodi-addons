<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.mis.favoritos" name="MisFav" version="0.1.1" provider-name="Antigravity">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    
    <!-- Main Plugin Entry Point -->
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    
    <!-- Global Context Menu Entry -->
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="resources/lib/context_menu.py">
                <label>Añadir a Mis Favoritos</label>
                <visible>true</visible>
            </item>
        </menu>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Smart Favorites Organizer</summary>
        <summary lang="es_ES">Organizador Inteligente de Favoritos</summary>
        <description lang="en_GB">Organize your Kodi favorites with folders, import native favorites, and manage everything with context menus.</description>
        <description lang="es_ES">Organiza tus favoritos de Kodi con carpetas, importa favoritos nativos y gestiona todo con menús contextuales.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <!-- <fanart>fanart.jpg</fanart> -->
        </assets>
    </extension>
</addon>
</addons>
